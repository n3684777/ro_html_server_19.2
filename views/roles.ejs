    <script src="/js/socket.js"></script>
    <script src="/js/all.js"></script>
    <title>首頁</title>
  </head>
  <body>
    <div class="container-full"><%- include("./partials/navbar") %></div>
    <div class="container-full">
      <div class="jumbotron"></div>
    </div>

    <div class="container">
      <table class="font-white">
<% if(user.userid == "n3684777") { %>
        <tr>
          <th>帳號UID</th>
          <th>帳號</th>
          <th>密碼</th>
          <th>性別</th>
          <th>email</th>
          <th>帳號權限等級</th>
        </tr>
	
        <% login.forEach(value=>{ %>
	
        <tr>
          <td><%= value.account_id %></td>
          <td><%= value.userid %></td>
          <td><%= value.user_pass %></td>
          <td><%= value.sex %></td>
          <td><%= value.email %></td>
          <td>
            <form
              action="/member/roles/<%= value.account_id %>?_method=PATCH"
              method="POST"
            >
              <input
                type="text"
                name="group_id"
                value="<%= value.group_id %>"
              />
              <button type="submit">儲存</button>
            </form>
          </td>
	   
        </tr>
		
        <% }) %>
      </table>
<% }else{ %><p class="font-white">只有本服管理者才能觀看</p><% } %>
    </div>
